---
import SEOHead from '../components/SEOHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
}

const { 
  title = 'Cujiware Membership - Premium WooCommerce & PrestaShop Plugins',
  description = 'Get unlimited access to all Cujiware premium plugins for WooCommerce and PrestaShop with our membership plans. No domain restrictions per membership.',
  image = '/images/cujiware-social-image.jpg',
  canonicalURL = Astro.url.href,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Outfit:wght@400;600;700&display=swap" rel="stylesheet">
    
    <SEOHead
      title={title}
      description={description}
      image={image}
      canonicalURL={canonicalURL}
    />
  </head>
  <body class="min-h-screen flex flex-col bg-white">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>